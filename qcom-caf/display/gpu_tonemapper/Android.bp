cc_library_shared {
    name: "libgpu_tonemapper",
    vendor: true,

    header_libs: [
        "display_headers",
        "qti_kernel_headers",
    ],
    shared_libs: [
        "libEGL",
        "libGLESv2",
        "libGLESv3",
        "libui",
        "libutils",
        "liblog",
    ],

    cflags: [
        "-Wno-missing-field-initializers",
        "-Wall",
        "-Wno-unused-parameter",
        "-Wno-unreachable-code-loop-increment",
        "-DLOG_TAG=\"GPU_TONEMAPPER\"",
    ],

    srcs: [
        "TonemapFactory.cpp",
        "glengine.cpp",
        "EGLImageBuffer.cpp",
        "EGLImageWrapper.cpp",
        "Tonemapper.cpp",
    ],

}
